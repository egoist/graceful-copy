{
  "name": "kopy",
  "version": "8.0.0",
  "description": "The backbone of a scaffolding tool.",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "npm run lint && jest",
    "lint": "xo",
    "commit": "git-cz"
  },
  "repository": {
    "url": "egoist/kopy",
    "type": "git"
  },
  "author": "egoist<0x142857@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.2",
    "cross-spawn": "^6.0.5",
    "env-paths": "^2.0.0",
    "ini": "^1.3.5",
    "is-binary-path": "^2.0.0",
    "jstransformer": "^1.0.0",
    "jstransformer-ejs": "^0.2.0",
    "log-update": "^2.3.0",
    "majo": "^0.6.3",
    "micromatch": "^3.1.10",
    "ora": "^3.0.0",
    "prompts": "^2.0.1",
    "superstruct": "^0.6.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/micromatch": "^3.1.0",
    "@types/prompts": "^1.2.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.15.3",
    "semantic-release": "^15.13.2",
    "typescript": "^3.2.2",
    "xo": "^0.23.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "no-await-in-loop": "off",
      "unicorn/catch-error-name": "off"
    },
    "envs": [
      "jest"
    ]
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
