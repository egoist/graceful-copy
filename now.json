{
  "version": 2,
  "alias": ["kopy.now.sh", "kopy.saojs.org"],
  "builds": [
    {
      "src": "docs/**",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "^/(.*)",
      "dest": "/docs/$1"
    },
    {
      "src": "^/sw.js",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/sw.js"
    },
    {
      "src": "^/(.+)\\.(.+)",
      "dest": "/$1.$2"
    },
    {
      "src": "^/(.*)",
      "dest": "/index.html"
    }
  ],
  "github": {
    "silent": true
  }
}
